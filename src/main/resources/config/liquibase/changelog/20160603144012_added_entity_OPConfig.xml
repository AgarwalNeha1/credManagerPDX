<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>
    <property name="now" value="sysdate" dbms="oracle"/>

    <property name="autoIncrement" value="true" dbms="mysql,h2,postgresql,oracle"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle"/>

    <!--
        Added the entity OPConfig.
    -->
    <changeSet id="20160603144012-1" author="jhipster">
        <createTable tableName="op_config">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="inum" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            
            <column name="company_name" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            
            <column name="company_short_name" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            
            <column name="host" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            
            <column name="client_id" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            
            <column name="client_jwks" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            
            <column name="authentication_level" type="integer">
                <constraints nullable="true" />
            </column>
            
            <column name="required_open_id_scope" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            
            <column name="required_claim" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            
            <column name="required_claim_value" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            
            <column name="enable_password_management" type="bit">
                <constraints nullable="true" />
            </column>
            
            <column name="enable_admin_page" type="bit">
                <constraints nullable="true" />
            </column>
            
            <column name="enable_email_management" type="bit">
                <constraints nullable="true" />
            </column>
            
            <column name="activation_key" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            
            <column name="email" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            
            <column name="activated" type="bit">
                <constraints nullable="false" />
            </column>
            
            <!-- jhipster-needle-liquibase-add-column - Jhipster will add columns here, do not remove-->
        </createTable>
        
    </changeSet>
</databaseChangeLog>
